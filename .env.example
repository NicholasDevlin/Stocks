# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=stocks_user
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=stocks_db
MYSQL_ROOT_PASSWORD=your_root_password

# Application Configuration
APP_PORT=3001

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_here_use_strong_random_string
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_use_different_strong_random_string
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stock API Configuration (if using external stock APIs)
STOCK_API_KEY=your_stock_api_key_here
STOCK_API_URL=https://api.example.com

# CORS Configuration
FRONTEND_URL=http://localhost:3002
FRONTEND_URL_ALT=http://127.0.0.1:3002

# Development/Production Environment
NODE_ENV=development

# Optional: Logging Configuration
LOG_LEVEL=debug

# Optional: Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads